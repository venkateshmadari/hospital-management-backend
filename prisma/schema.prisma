generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Patient {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  role      Role     @default(PATIENT)
  createdAt DateTime @default(now())
}

model Otp {
  otp       Int      @id
  userId    String
  expiredAt DateTime
  createdAt DateTime @default(now())
}

model Doctors {
  id          String         @id @default(uuid())
  name        String
  email       String         @unique
  password    String
  role        Role           @default(DOCTOR)
  status      DoctorStatus   @default(INACTIVE)
  designation String
  image       String?
  speciality  String
  description String?
  createdAt   DateTime       @default(now())
  Avability   Availability[]
}

model Availability {
  id             String    @id @default(uuid())
  doctorId       String
  doctor         Doctors   @relation(fields: [doctorId], references: [id])
  day            DayOfWeek
  startTime      String
  endTime        String
  breakStartTime String
  breakEndTime   String
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
}

enum Role {
  ADMIN
  DOCTOR
  PATIENT
}

enum DoctorStatus {
  ACTIVE
  INACTIVE
}

enum DayOfWeek {
  Monday
  Tuesday
  Wednesday
  Thrusday
  Friday
  Saturday
  Sunday
}
